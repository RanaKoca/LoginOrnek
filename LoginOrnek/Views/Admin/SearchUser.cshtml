@model IEnumerable<Hasta>

<form method="post" enctype="multipart/form-data">
    <input class="form-control" type="text" name="aranacakkullaniciadi" placeholder="Kullanıcı Adı">
    <button class="form-control" type="submit" asp-action="SearchUser" asp-controller="Admin">Ara</button>
</form>
<hr />
@if (Model != null && Model.Any())
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Ad</th>
                <th>Soyad</th>
                <th>İlaç</th>
                <th>Kullanıcı Adı</th>
                <th>Şifre</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var hasta in Model)
            {
                <tr>
                    <td>@hasta.id</td>
                    <td>@hasta.Ad</td>
                    <td>@hasta.Soyad</td>
                    <td>@hasta.IlacAdi</td>
                    <td>@hasta.KullaniciAdi</td>
                    <td>@hasta.Sifre</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Hasta Bulunamadı.</p>

}