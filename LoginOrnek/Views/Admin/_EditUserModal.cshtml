@model Hasta
<div class="modal fade" id="editUserModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">Bilgileri Güncelle</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="EditUserUpdate" method="post">
                    <div class="form-group">
                        <input asp-for="id" class="form-control" type="hidden" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Ad"></label>
                        <input asp-for="Ad" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Soyad"></label>
                        <input asp-for="Soyad" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="IlacAdi"></label>
                        <input asp-for="IlacAdi" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="KullaniciAdi"></label>
                        <input asp-for="KullaniciAdi" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Sifre"></label>
                        <input asp-for="Sifre" class="form-control" />
                    </div>
                    <hr>
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                    <hr>

                </form>
            </div>
        </div>
    </div>
</div>